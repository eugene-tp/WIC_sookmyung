<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/step11_layout1"
    android:layout_width="360dp"
    android:layout_height="612dp"
    android:orientation="vertical"
    tools:context=".StepCampus.NaviStep11">

    <LinearLayout
        android:id="@+id/step11_layout2"
        android:layout_width="match_parent"
        android:layout_height="342dp"
        android:background="#FFDE17"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ic_navi_ste11"
            android:layout_width="160dp"
            android:layout_height="167dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/alert" />

        <LinearLayout
            android:id="@+id/straight_step11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/step11_layout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/step11_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="음향신호기 버튼을"
                    android:textSize="38dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/step11_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="눌러주세요"
                    android:textSize="38dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/step11_layout6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/step11_layout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/step11_text5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="6:07"
                android:textColor="#FFDE17"
                android:textSize="50dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/step11_text6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="600"
                android:textColor="#FFDE17"
                android:textSize="50dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/step11_layout8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/step11_text7"
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="남은 시간"
                android:textColor="#ffffff"
                android:textSize="26dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/step11_text8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="남은 거리(m)"
                android:textColor="#ffffff"
                android:textSize="26dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/step11_layout9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/step11_layout10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/step11_replay_btn"
                    android:layout_width="124dp"
                    android:layout_height="160dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="26dp"
                    android:background="#00ff0000"
                    android:drawableTop="@drawable/ic_replay"
                    android:text="다시 듣기"
                    android:textColor="#ffffff"
                    android:textSize="11pt"></Button>

                <Button
                    android:id="@+id/step11_pause_btn"
                    android:layout_width="124dp"
                    android:layout_height="160dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="26dp"
                    android:background="#00ff0000"
                    android:drawableTop="@drawable/ic_pause"
                    android:text="일시정지"
                    android:textColor="#ffffff"
                    android:textSize="11pt"></Button>

                <Button
                    android:id="@+id/step11_call"
                    android:layout_width="124dp"
                    android:layout_height="160dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="26dp"
                    android:background="#00ff0000"
                    android:drawableTop="@drawable/ic_main_call"
                    android:text="비상 연락"
                    android:textColor="#ffffff"
                    android:textSize="11pt"></Button>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
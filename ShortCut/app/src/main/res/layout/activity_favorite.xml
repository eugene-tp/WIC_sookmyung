<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/favorite_layer"
    android:layout_width="360dp"
    android:layout_height="612dp"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".Addition.Favorite">

    <LinearLayout
        android:id="@+id/favorite_layer1"
        android:layout_width="match_parent"
        android:layout_height="306dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/favorite_layer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_fav1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_fav_fav" />

            <Button
                android:id="@+id/fav_button1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                android:background="#000000"
                android:text="프라임관 203"
                android:textColor="#ffffff"
                android:textSize="36dp"
                android:onClick="onClick_prime203"/>

        </LinearLayout>


        <View
            android:id="@+id/favorite_view1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ffffff" />

        <LinearLayout
            android:id="@+id/favorite_layer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_fav2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_fav_fav" />

            <Button
                android:id="@+id/fav_button2"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                android:background="#000000"
                android:text="명신관 322"
                android:textColor="#ffffff"
                android:textSize="36dp"
                android:onClick="onClick_myungsin322"/>

        </LinearLayout>


        <View
            android:id="@+id/favorite_view3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ffffff" />

        <LinearLayout
            android:id="@+id/favorite_layer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_fav3"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_fav_fav" />

            <Button
                android:id="@+id/fav_button3"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:layout_marginRight="40dp"
                android:background="#000000"
                android:text="장애학생 센터"
                android:textColor="#ffffff"
                android:textSize="36dp"
                android:onClick="onClick_center"/>

        </LinearLayout>


        <View
            android:id="@+id/favorite_view4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ffffff" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/search_map_start_btn"
            android:layout_width="134dp"
            android:layout_height="111dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="180dp"
            android:background="#00ff0000"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_add"></ImageButton>
    </RelativeLayout>

    />
</LinearLayout>
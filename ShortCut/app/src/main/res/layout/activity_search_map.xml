<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="612dp"
    android:orientation="vertical"
    tools:context=".Main.SearchMapActivity">

    //yellow bar

    <RelativeLayout
        android:id="@+id/search_map_map_view"
        android:layout_width="match_parent"
        android:layout_height="390dp">

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#FFDE17"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/search_map_nowgps_ic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_main_nowgps"></ImageView>

                <ImageView
                    android:id="@+id/search_map_dot_ic"
                    android:layout_width="4dp"
                    android:layout_height="12dp"
                    android:layout_marginVertical="2dp"
                    android:src="@drawable/dot"></ImageView>

                <ImageView
                    android:id="@+id/search_map_main_ic"
                    android:layout_width="30dp"
                    android:layout_height="42dp"
                    android:src="@drawable/ic_main_map"></ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="238dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp">

                    <EditText
                        android:id="@+id/search_map_now_loacation_txt"
                        android:layout_width="238dp"
                        android:layout_height="42dp"
                        android:background="@drawable/round_rec_in_search_map"></EditText>


                    <TextView
                        android:id="@+id/myungsin_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="4dp"
                        android:text="프라임관 203"
                        android:textColor="#ffffff"
                        android:textSize="24dp"
                        android:textStyle="bold" />
                </RelativeLayout>
                //top text input

                <RelativeLayout
                    android:layout_width="238dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">

                    <EditText
                        android:id="@+id/search_map_detination_loacation_txt"
                        android:layout_width="238dp"
                        android:layout_height="42dp"
                        android:background="@drawable/round_rec_in_search_map"></EditText>


                    <TextView
                        android:id="@+id/prime_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="4dp"
                        android:text="명신관 322"
                        android:textColor="#ffffff"
                        android:textSize="24dp"
                        android:textStyle="bold" />
                </RelativeLayout>
                //bottom text input
            </LinearLayout>

            <ImageButton
                android:id="@+id/search_map_change_btn"
                android:layout_width="38dp"
                android:layout_height="28dp"
                android:layout_marginBottom="24dp"
                android:background="#00ff0000"
                android:src="@drawable/ic_switch"></ImageButton>
        </LinearLayout>

        <ImageButton
            android:id="@+id/search_map_start_btn"
            android:layout_width="112dp"
            android:layout_height="103dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="6dp"
            android:background="#00ff0000"
            android:onClick="onClick_search"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_start_navi"></ImageButton>

        //icons

        //search input
    </LinearLayout>


</LinearLayout>
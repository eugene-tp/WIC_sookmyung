<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.SearchMapActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:background="#FFDE17"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginRight="8dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_main_nowgps"
                android:id="@+id/search_map_nowgps_ic"></ImageView>
            <ImageView
                android:layout_width="4dp"
                android:layout_height="12dp"
                android:src="@drawable/dot"
                android:id="@+id/search_map_dot_ic"
                android:layout_marginVertical="2dp"></ImageView>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_main_map"
                android:id="@+id/search_map_main_ic"></ImageView>
        </LinearLayout>//icons
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp">
                <EditText
                    android:id="@+id/search_map_now_loacation_txt"
                    android:layout_width="238dp"
                    android:layout_height="42dp"
                    android:background="@drawable/round_rec_in_search_map"></EditText>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginVertical="8dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_main_mic"></ImageView>
            </RelativeLayout>//top text input
            <RelativeLayout
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">
                <EditText
                    android:id="@+id/search_map_detination_loacation_txt"
                    android:layout_width="238dp"
                    android:layout_height="42dp"
                    android:background="@drawable/round_rec_in_search_map"></EditText>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_main_mic"
                    android:layout_alignParentRight="true"
                    android:layout_marginVertical="8dp"
                    android:layout_marginRight="16dp"></ImageView>
            </RelativeLayout>//bottom text input
        </LinearLayout>//search input
        <ImageButton
            android:id="@+id/search_map_change_btn"
            android:layout_width="38dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_switch"
            android:layout_marginBottom="24dp"
            android:background="#00ff0000"></ImageButton>
    </LinearLayout>//yellow bar
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/search_map_map_view">
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/emer_layer"
    android:layout_width="360dp"
    android:layout_height="612dp"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".Addition.Favorite">

    <LinearLayout
        android:id="@+id/emer_layer1"
        android:layout_width="match_parent"
        android:layout_height="498dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/emer_layer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_emer1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_main_call" />

            <Button
                android:id="@+id/emer_button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:background="#000000"
                android:text="고수민 선생님"
                android:textColor="#ffffff"
                android:textSize="36dp" />

        </LinearLayout>


        <View
            android:id="@+id/emer_view1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ffffff" />

        <LinearLayout
            android:id="@+id/emer_layer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_emer2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_main_call" />

            <Button
                android:id="@+id/emer_button2"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:background="#000000"
                android:text="임수연 선생님"
                android:textColor="#ffffff"
                android:textSize="36dp" />

        </LinearLayout>


        <View
            android:id="@+id/emer_view3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ffffff" />

        <LinearLayout
            android:id="@+id/emer_layer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_emer3"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_main_call" />

            <Button
                android:id="@+id/emer_button3"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:background="#000000"
                android:text="도우미"
                android:textColor="#ffffff"
                android:textSize="36dp" />

        </LinearLayout>


        <View
            android:id="@+id/emer_view4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ffffff" />

        <LinearLayout
            android:id="@+id/emer_layer5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/emer_fav3"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_main_call" />

            <Button
                android:id="@+id/emer_button4"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:background="#000000"
                android:text="경비원"
                android:textColor="#ffffff"
                android:textSize="36dp" />

        </LinearLayout>

        <View
            android:id="@+id/emer_view5"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ffffff" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/emer_map_btn"
            android:layout_width="134dp"
            android:layout_height="111dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="3dp"
            android:background="#00ff0000"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_add"></ImageButton>
    </RelativeLayout>

    />
</LinearLayout>
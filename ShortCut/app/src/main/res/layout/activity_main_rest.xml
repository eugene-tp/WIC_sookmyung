<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="612dp"
    android:background="#FDDD02"
    android:orientation="vertical"
    tools:context=".Main.MainActivityRest">

    <LinearLayout
        android:id="@+id/rest_layout1"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rest_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rest_textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="오후 12:30"
            android:textSize="40dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rest_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rest_textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="프로그래밍"
                android:textSize="26dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rest_textView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:text="수업은"
                android:textSize="26dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rest_layout4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rest_textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="프라임관 203호"
                android:textSize="26dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rest_textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="이에요"
                android:textSize="26dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rest_layout5"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#FFDE17"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/rest_layout6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/rest_map_nowgps_ic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_main_nowgps"></ImageView>

            <ImageView
                android:id="@+id/rest_map_dot_ic"
                android:layout_width="4dp"
                android:layout_height="12dp"
                android:layout_marginVertical="2dp"
                android:src="@drawable/dot"></ImageView>

            <ImageView
                android:id="@+id/rest_map_main_ic"
                android:layout_width="30dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_main_map"></ImageView>
        </LinearLayout>
        //icons

        <LinearLayout
            android:id="@+id/rest_layout7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rest_layout8"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp">

                <EditText
                    android:id="@+id/rest_map_now_location_txt"
                    android:layout_width="238dp"
                    android:layout_height="42dp"
                    android:background="@drawable/round_rec_in_main_map"></EditText>

                <TextView
                    android:id="@+id/rest_textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="8dp"
                    android:text="장애학생 센터"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/rest_map_now_location_gps_btn1"
                    android:layout_width="26dp"
                    android:layout_height="34dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginVertical="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="16dp"
                    android:background="#00FF0000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_set_gps"></ImageButton>

            </RelativeLayout>
            //top text input

            <RelativeLayout
                android:id="@+id/rest_layout9"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

                <EditText
                    android:id="@+id/rest_map_detination_loacation_txt"
                    android:layout_width="238dp"
                    android:layout_height="42dp"
                    android:background="@drawable/round_rec_in_main_map"></EditText>

                <ImageButton
                    android:id="@+id/rest_map_now_location_gps_btn2"
                    android:layout_width="26dp"
                    android:layout_height="34dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginVertical="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="16dp"
                    android:background="#00FF0000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_set_gps"></ImageButton>

            </RelativeLayout>
            //bottom text input
        </LinearLayout>
        //search input

        <ImageButton
            android:id="@+id/rest_map_change_btn"
            android:layout_width="38dp"
            android:layout_height="28dp"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="4dp"
            android:background="#00ff0000"
            android:src="@drawable/ic_switch"></ImageButton>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rest_layout10"
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/rest_ic_start_navi"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="110dp"
            android:background="#00ff0000"
            android:onClick="onClick_navi_rest"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_start_navi"></ImageButton>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rest_layout11"
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:background="#000000"
        android:orientation="horizontal">

        <Button
            android:id="@+id/rest_ic_main_fav"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_alignParentLeft="true"
            android:layout_marginVertical="18dp"
            android:background="#00ff0000"
            android:drawableTop="@drawable/ic_main_fav"
            android:drawablePadding="4dp"
            android:text="즐겨찾기"
            android:textColor="#ffffff"
            android:textSize="12pt"></Button>

        <Button
            android:id="@+id/rest_ic_main_call"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_alignParentRight="true"
            android:layout_marginVertical="18dp"
            android:background="#00ff0000"
            android:drawableTop="@drawable/ic_main_call"
            android:drawablePadding="4dp"
            android:text="비상 연락"
            android:textColor="#ffffff"
            android:textSize="12pt"
            android:onClick="onClick_emergency_rest"></Button>

        <Button
            android:id="@+id/rest_ic_main_set"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_alignParentRight="true"
            android:layout_marginVertical="18dp"
            android:background="#00ff0000"
            android:drawableTop="@drawable/ic_main_set"
            android:drawablePadding="4dp"
            android:onClick="onClick_rest_setting"
            android:text="설정"
            android:textColor="#ffffff"
            android:textSize="12pt"></Button>

    </LinearLayout>

</LinearLayout>